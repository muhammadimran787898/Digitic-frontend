{
  "plugins": ["prettier", "unused-imports", "eslint-plugin-local-rules"],
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "ignorePatterns": [
    "components/ui/*.ts",
    "components/ui/*.tsx",
    "rules.ts",
    ".gitignore",
    "eslint-local-rules/index.js",
    "eslint-local-rules/rules.ts",
    ".next/",
    ".next"
  ],
  "rules": {
    "prettier/prettier": [
      "error",

      {
        "endOfLine": "auto",
        "max-len": "off",
        "operator-linebreak": ["warn", "after"]
      }
    ],

    "local-rules/disallow-identifiers": "error",
    "local-rules/no-small-functional-component": "error",
    "local-rules/use-client": "error",
    "camelcase": "off",
    "max-len": "off",
    // "no-var-capital": "error",
    "operator-linebreak": ["warn", "after"],
    "import/prefer-default-export": "off",
    "react-hooks/rules-of-hooks": "off",
    "react/jsx-filename-extension": "off",
    "react/jsx-props-no-spreading": "off",
    "react/no-unused-prop-types": "off",
    "react/require-default-props": "off",
    "react/no-unescaped-entities": "off",
    "import/extensions": [
      "error",
      "always",
      {
        "ts": "never",
        "tsx": "never",
        "js": "never",
        "jsx": "never"
      }
    ],

    "quotes": "off",
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["hrefLeft", "hrefRight"],
        "aspects": ["invalidHref", "preferButton"]
      }
    ],
    "no-unused-vars": "off",

    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "error",
      {
        "vars": "all"
      }
    ]
  },
  "overrides": [
    {
      "files": "./src/**/*.+(ts|tsx)",
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint/eslint-plugin"],
      "extends": ["plugin:@typescript-eslint/recommended", "prettier"],
      "rules": {
        "@typescript-eslint/explicit-function-return-type": "off",
        "react-hooks/rules-of-hooks": "off",
        // "import/no-unused-modules": ["error", {"unusedExports": true}],
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "no-use-before-define": "off",
        "@typescript-eslint/no-use-before-define": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-var-requires": "off"
        // "@typescript-eslint/quotes": [
        //   2,
        //   "singleQuote",
        //   {
        //     "avoidEscape": true
        //   }
        // ]
      }
    }
  ],
  "settings": {
    "local-rules": {
      "rulePaths": ["./packages/no-var-capital/no-var-capital.js"]
    }
  }
}
